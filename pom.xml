    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>               
                <version>3.3</version>
                <configuration>                
                    <source>1.6</source>    
                    <target>1.6</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>com.mycila</groupId>
                <artifactId>license-maven-plugin</artifactId>
                <version>2.10</version>
                <configuration>
                    <header>etc/header.txt</header>
                    <validHeaders>
                        <validHeader>etc/databinder-header.txt</validHeader>
                    </validHeaders>
                    <strictCheck>true</strictCheck>
                    <aggregate>true</aggregate>
                    <includes>
                        <include>src/**/*.java</include>
                    </includes>
                    <mapping>
                        <java>SLASHSTAR_STYLE</java>
                    </mapping>
                    <properties>
                        <year>${project.inceptionYear}-${copyright.year}</year>
                    </properties>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>check</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>2.10.1</version>
                <configuration>
                    <!-- currently skipping javadoc, it was causing release problems -->
                    <skip>true</skip>
                    <!-- this will create Javadocs in an "apidocs" directory
                         that is a sister to the "trunk" directory.
                         This location works well on Google Code.
                         Run "mvn javadoc:aggregate" to update. -->
                    <reportOutputDirectory>${basedir}/..</reportOutputDirectory>
                    <outputDirectory>${basedir}/..</outputDirectory>
                    <author>false</author>
                    <quiet>true</quiet>
                </configuration>
            </plugin>
        </plugins>

        <extensions>
