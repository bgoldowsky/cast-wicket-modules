<?xml version="1.0" encoding="UTF-8"?>

<configuration scan="true">
  <appender name="Stdout" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%date{HH:mm:ss} %-5level %logger{36} %msg%n</pattern>
    </encoder>
  </appender> 

  <root level="WARN">
    <appender-ref ref="Stdout"/>
  </root>

</configuration>
